{
	"variables": {
		"aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
		"aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
		"region": "{{ env `AWS_REGION` }}",
		"environment": "{{ env `PACKER_ENVIRONMENT` }}"
	},
	"builders": [{
		"type": "amazon-ebs",
		"access_key": "{{ user `aws_access_key_id` }}",
		"secret_key": "{{ user `aws_secret_access_key` }}",
		"region": "{{user `region`}}",
		"spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
		"ssh_pty": true,
		"instance_type": "t2.medium",
		"associate_public_ip_address": true,

		"source_ami_filter": {
			"filters": {
				"virtualization-type": "hvm",
				"name": "*RHEL-7.3_HVM_GA-*",
				"root-device-type": "ebs"
			},
			"owners": ["309956199498"],
			"most_recent": true
		},
		"ssh_username": "ec2-user",
		"ssh_timeout": "5m",

		"ami_virtualization_type": "hvm",
		"ami_description": "Consul Server",
		"ami_name": "se-consul-0.7.5-RHEL7.3-{{isotime \"2006-01-02-1504\"}}",
		"tags": {
			"Name": "{{user `environment`}} Consul Server",
			"System": "Consul OSS",
			"Component": "Consul",
			"OS": "RHEL-7.3"
		}
	}],
	"provisioners": [
	{
		"type": "shell",
		"start_retry_timeout": "10m",
		"inline": [
			"touch /tmp/provisioned"
		]
	},
	{
		"type": "shell",
		"start_retry_timeout": "10m",
		"inline": [
			"/usr/bin/sudo /sbin/setenforce 0",
			"/usr/bin/sudo yum -y install redhat-lsb-core",
			"/bin/curl https://raw.githubusercontent.com/ncorrare/terraform-examples/master/provision.sh | /usr/bin/sudo /bin/bash",
			"/usr/bin/sudo /opt/puppetlabs/bin/puppet apply --environment packer -e 'include profile::consulserver'"
		]
	},
	{
		"type": "shell",
		"start_retry_timeout": "5m",
		"inline": [
                        "sudo yum -y remove puppet-agent puppetlabs-release-pc1",
			"sudo rm -rf /etc/puppetlabs",
			"sudo rm -rf /var/lib/cloud/instances/*",
			"sudo rm -f /root/.ssh/authorized_keys",
			"sudo rm -f /home/ec2-user/.ssh/authorized_keys",
			"history -cw"
		]
	}
	]
}
